            "Pooling": true
        },
        "AspNet": {
          "Identity": {
              "Users": [
                  {
                      "GivenName": "system",
                      "MiddleName": "",
                      "FamilyName": "administrator",
                      "Email": "administrator@system.dev",
                      "EmailVerified": true,
                      "PhoneNumber": null,
                      "PhoneNumberVerified": false,

                    "Scopes": ["profile", "roles", "profile.name", "profile.email", "profile.phone_number", "profile.locale", "profile.zoneinfo", "profile.updated_at", "offline_access"],
                    "Endpoints": ["authorization", "logout", "token"],
                    "GrantTypes": ["authorization_code", "refresh_token", "client_credentials"],
                    "ResponseTypes": ["code"],
                    "Requirements": ["pkce"],
                    "RedirectUris": ["https://localhost:5003/signin-oidc","http://localhost:5002/signin-oidc"],
                    "PostLogoutRedirectUris": ["https://localhost:5003/signout-callback-oidc","http://localhost:5002/signout-callback-oidc"]
                },
                {
                    "Id": "pocket_storage_resource_server_swagger",
                    "Secret": "pocket_storage_resource_server_swagger_secret",
                    "DisplayName": "Pocket Storage Resource Server OpenAPI",
                    "Scopes": ["profile", "roles", "profile.name", "profile.email", "profile.phone_number", "profile.locale", "profile.zoneinfo", "profile.updated_at", "offline_access"],

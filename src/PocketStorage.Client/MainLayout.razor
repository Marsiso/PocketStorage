@using PocketStorage.BFF.Authorization.Enums
@using PocketStorage.BFF.Authorization.Components
@inherits LayoutComponentBase

<header>
    <nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm border-bottom bg-white shadow-lg mb-3 p-2">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><span class="fa fa-rocket me-2"></span>Pocket Storage</a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa-solid fa-bars"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <span class="fa-solid fa-home-user"></span>
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"href="#">
                            <span class="fa-solid fa-shield-halved"></span>
                            Privacy
                        </a>
                    </li>
                    <PermitView Permissions="Permission.ViewUsers">
                        <Authorized>
                            <li class="nav-item">
                                <a class="nav-link"href="/userclaims">
                                    <span class="fa-solid fa-key"></span>
                                    Claims principal
                                </a>
                            </li>
                        </Authorized>
                    </PermitView>
                </ul>
                <ul class="navbar-nav">
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <form action="api/account/sign-out" method="post">
                                    <AntiForgeryTokenInput/>
                                    <button type="submit" class="nav-link">
                                        <span class="fa-solid fa-sign-out-alt text-start"></span>
                                        Sign out
                                    </button>
                                </form>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li class="nav-item">
                                <form action="api/account/signin" method="post">
                                    <AntiForgeryTokenInput/>
                                    <button type="submit" class="nav-link">
                                        <span class="fa-solid fa-sign-in"></span>
                                        Sign in
                                    </button>
                                </form>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container" style="margin-top: 6rem; margin-bottom: 6rem;">
    <main role="main">
        @Body
    </main>
</div>

<footer class="fixed-bottom border-top bg-white shadow-lg text-center text-muted p-2">
    &copy; 2023 - Pocket Storage
</footer>

@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Form.Email" type="email" class="form-control" autocomplete="username" aria-required="true" placeholder="petr.pavel@centrum.cz" required/>
                <label asp-for="Form.Email" class="form-label"></label>
                <span asp-validation-for="Form.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

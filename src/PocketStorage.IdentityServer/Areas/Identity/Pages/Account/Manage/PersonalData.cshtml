@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal data";
}

<div class="text-center mb-3">
    <h1 class="display-6">Personal data</h1>
    <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
</div>
<div class="row justify-content-center">
    <div class="col-12 d-flex justify-content-center">
        <div style="max-width: 30rem">
            <div class="alert alert-warning d-flex align-items-center justify-content-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
                <div class="ms-3">Deleting this data will permanently remove your account, and this cannot be recovered.</div>
            </div>
        </div>
    </div>
    <div class="col-12" style="max-width: 20rem;">
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
            <button class="w-100 btn btn-light" type="submit">Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-secondary">Delete</a>
        </p>
    </div>
</div>

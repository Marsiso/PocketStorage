@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Sign up confirmation";
}

<div class="text-center mb-3">
    <h1 class="display-6">Sign up confirmation</h1>
</div>
<div class="row justify-content-center">
    <div class="col-12" style="max-width: 30rem;">
        @{
            if (Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf" class="text-black">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="text-black">Click here to confirm your account</a>
                </p>
            }
            else
            {
                <p>
                    Please check your email to confirm your account.
                </p>
            }
        }
    </div>
</div>
